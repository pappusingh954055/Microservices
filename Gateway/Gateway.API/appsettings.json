{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "identity-route": {
        "ClusterId": "identity-cluster",
        "Match": {
          "Path": "/api/identity/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "api/{**catch-all}" }
        ]
      },
      "customers-route": {
        "ClusterId": "customers-cluster",
        "Match": {
          "Path": "/api/customers/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "api/{**catch-all}" }
        ]
      },
      "inventory-route": {
        "ClusterId": "inventory-cluster",
        "Match": {
          "Path": "/api/inventory/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "api/{**catch-all}" }
        ]
      },
      "suppliers-route": {
        "ClusterId": "suppliers-cluster",
        "Match": {
          "Path": "/api/suppliers/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "api/{**catch-all}" }
        ]
      },
      "company-uploads-route": {
        "ClusterId": "company-cluster",
        "Order": 1,
        "Match": {
          "Path": "/api/company/uploads/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "uploads/{**catch-all}" }
        ]
      },
      "company-route": {
        "ClusterId": "company-cluster",
        "Order": 2,
        "Match": {
          "Path": "/api/company/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "api/{**catch-all}" }
        ]
      },
      "sales-route": {
        "ClusterId": "inventory-cluster",
        "Match": {
          "Path": "/api/sales/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "api/{**catch-all}" }
        ]
      }
    },
    "Clusters": {
      "identity-cluster": {
        "Destinations": {
          "destination1": { "Address": "http://identity.api:8080" }
        }
      },
      "customers-cluster": {
        "Destinations": {
          "destination1": { "Address": "http://customers.api:8080" }
        }
      },
      "inventory-cluster": {
        "Destinations": {
          "destination1": { "Address": "http://inventory.api:8080" }
        }
      },
      "suppliers-cluster": {
        "Destinations": {
          "destination1": { "Address": "http://suppliers.api:8080" }
        }
      },
      "company-cluster": {
        "Destinations": {
          "destination1": { "Address": "http://company.api:8080" }
        }
      }
    }
  }
}
